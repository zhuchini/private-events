<div>
  <h1><%= @user.name %></h1>
  <div>
    <h4>Created Events</h4>
    <ul>
      <% @user.created_events.each do |x| %>
        <li><% x.title %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <div>
      <h4>Upcoming Events</h4>
      <ul>
        <% @user.attended_events.upcoming_events.each do |x| %>
          <li><% x.title %></li>
        <% end %>
      </ul>
    </div>
    <div>
      <h4>Past Events</h4>
      <ul>
        <% @user.attended_events.previous_events.each do |x| %>
          <li><% x.title %></li>
        <% end %>
      </ul>
    </div>
  </div>

</div>