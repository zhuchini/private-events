<h1>All Events</h1>
<div>
  <%= will_paginate(@upcoming_events) %>
</div>
<h4>Upcoming Events</h4>
<div class="box">
  <ul>
      <% @upcoming_events.each do |event| %>
          <li class="list-item">
              <p><%= link_to(event.title, event_path(event)) %></p>
              <p>On: <%= event.date %></p>
              <p>Created by: <%= link_to(event.creator.name, user_path(event.creator)) %></p>
          </li>
      <% end %>
  </ul>
</div>
<h4>Previous Events</h4>
<div class="box">
  <ul>
      <% @previous_events.each do |event| %>
          <li class="list-item">
              <p><%= link_to(event.title, event_path(event)) %></p>
              <p>On: <%= event.date %></p>
              <p>Created by: <%= link_to(event.creator.name, user_path(event.creator)) %></p>
          </li>
      <% end %>
  </ul>
</div>
